            <GradientStop Color="#FF39CBDE" Offset="0" />
            <GradientStop Color="#FFB5E4EA" Offset="0.285" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <GroupBox Header="Consultar por Livro e Ato" Height="76" Margin="10,101,550,0" Name="groupBox1" VerticalAlignment="Top">
            <Grid>
                <Button Background="{x:Null}" Click="btnConsultar_Click" Content="_Consultar" Cursor="Hand" Height="41" Margin="122,10,0,0" Name="btnConsultar" TabIndex="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" />
