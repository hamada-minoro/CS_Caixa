                <TextBox CharacterCasing="Upper" Height="23" IsEnabled="True" Margin="63,24,0,0" MaxLength="3" MaxLines="3" x:Name="txtAto" TabIndex="1" VerticalAlignment="Top" Visibility="Visible" PreviewKeyDown="txtAto_PreviewKeyDown" HorizontalAlignment="Left" Width="53"/>
                <Label Content="Ato:" HorizontalAlignment="Left" Margin="63,0,0,0" VerticalAlignment="Top" Height="24"/>
            </Grid>
        </GroupBox>
        <DataGrid AllowDrop="False" AlternatingRowBackground="#FF8DE1FF" AlternationCount="2" AutoGenerateColumns="False" Background="{x:Null}" CanUserResizeRows="False" ClipboardCopyMode="ExcludeHeader" GridLinesVisibility="None" HeadersVisibility="All" Height="218" HorizontalScrollBarVisibility="Auto" IsReadOnly="true" IsTabStop="True" Margin="10,0,12,16" Name="dataGridConsulta" RowBackground="White" SelectionMode="Single" SelectionUnit="FullRow" UseLayoutRounding="True" VerticalAlignment="Bottom" >
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF0086FF" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=IdAto}" CanUserResize="False" Header="Ato" Visibility="Hidden" Width="50" />
                <DataGridTextColumn x:Name="colData" Binding="{Binding Path=Data, StringFormat=dd/MM/yyyy}" CanUserResize="False" Header="Data" Width="80" IsReadOnly="true"/>
                <DataGridTextColumn x:Name="colLivro" Binding="{Binding Path=Livro}" CanUserResize="False" Header="Livro" Width="80" IsReadOnly="true"/>
                <DataGridTextColumn x:Name="colFolhasInicio" Binding="{Binding Path=FolhasInicio}" CanUserResize="False" Header="Folhas Início" Width="80"  IsReadOnly="true"/>
                <DataGridTextColumn x:Name="colFolhasFim" Binding="{Binding Path=FolhasFim}" CanUserResize="False" Header="Folhas Fim" Width="80"  IsReadOnly="true"/>
                <DataGridTextColumn x:Name="colAto" Binding="{Binding Path=Ato}" CanUserResize="False" Header="Ato" Width="60" IsReadOnly="true" />
                <DataGridTextColumn x:Name="colNatureza" Binding="{Binding Path=Natureza}" CanUserResize="False" Header="Natureza" Width="200" IsReadOnly="true" />
                <DataGridTextColumn x:Name="colSelo" Binding="{Binding Path=Selo}" CanUserResize="False" Header="Selo" Width="80" IsReadOnly="true" />
                <DataGridTextColumn x:Name="colAleatorio" Binding="{Binding Path=Aleatorio}" CanUserResize="False" Header="Aleatório" Width="60" IsReadOnly="true" />
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Header="Consulta por Data" Height="76" Margin="224,101,249,0" x:Name="groupBox1_Copy" VerticalAlignment="Top">
            <Grid>
                <Button Background="{x:Null}" Click="btnConsultarData_Click" Content="_Consultar" Cursor="Hand" Height="41" Margin="209,10,0,0" x:Name="btnConsultarData" TabIndex="5" VerticalAlignment="Top" HorizontalAlignment="Left" Width="73" />
